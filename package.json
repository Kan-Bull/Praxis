{
  "name": "praxis",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "Capture screenshots and step-by-step workflow guides. Annotate, blur sensitive data, and export as PDF or PNG. Privacy-first, no account needed.",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "dev": "vite build --watch --mode development",
    "build": "tsc --noEmit && vite build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "playwright test",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint src/ tests/ --fix",
    "format": "prettier --write 'src/**/*.{ts,tsx,css,json}' 'tests/**/*.{ts,tsx}'",
    "format:check": "prettier --check 'src/**/*.{ts,tsx,css,json}'",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "keywords": ["chrome-extension", "screenshot", "workflow", "annotation", "pdf", "privacy"],
  "author": "Quentin Goossens",
  "license": "ISC",
  "dependencies": {
    "fabric": "^7.1.0",
    "jspdf": "^4.1.0",
    "preact": "^10.28.3"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@preact/preset-vite": "^2.10.3",
    "@testing-library/preact": "^3.2.4",
    "@types/chrome": "^0.1.36",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "eslint": "^9.39.2",
    "jsdom": "^28.0.0",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vite-plugin-web-extension": "^4.5.0",
    "vitest": "^4.0.18"
  }
}
