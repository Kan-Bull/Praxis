{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "types": ["chrome"],
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "outDir": "dist",
    "paths": {
      "@shared/*": ["./src/shared/*"],
      "@background/*": ["./src/background/*"],
      "@content/*": ["./src/content/*"],
      "@popup/*": ["./src/popup/*"],
      "@editor/*": ["./src/editor/*"]
    }
  },
  "include": ["src/**/*", "tests/**/*"]
}
